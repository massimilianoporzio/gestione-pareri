[flake8]
max-line-length = 120
extend-ignore =
    # Ignora errori di importazione per settings Django
    F401,F403
exclude =
    .venv,
    venv,
    __pycache__,
    .git,
    .pytest_cache,
    build,
    dist,
    *.egg-info,
    migrations,
    */migrations/*,
    **/migrations/**,
    node_modules
per-file-ignores =
    # Settings Django
    src/home/settings.py:F401,F403
    src/home/settings/*.py:F401,F403
    # File di esempio con import controllati
    examples/logging_example.py:E402
    examples/check_logging.py:E402
    src/test_logging.py:E402
    tools/add_docstring_batch.py:E402
