[flake8]
max-line-length = 120
extend-ignore = E203
exclude = .git,__pycache__,docs/conf.py,old,build,dist,.venv
per-file-ignores =
    examples/logging_example.py:E402
    examples/check_logging.py:E402
    src/home/settings.py:F401,F403,E402
    src/home/settings/*.py:F401,F403,E402
    tools/add_docstring_batch.py:E402
