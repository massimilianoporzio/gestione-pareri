{
  "[html]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "monosans.djlint"
  },
  "[django-html]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "monosans.djlint"
  },
  "editor.formatOnSave": false,
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.(html|djhtml|django-html)$",
        "cmd": "uv run djlint \"${file}\" --reformat --ignore H030"
      }
    ]
  },

  "djlint.enableLinting": false
}
