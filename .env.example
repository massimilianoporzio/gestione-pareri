# Impostazione ambiente Django (dev, test, prod)
DJANGO_ENV=dev

# Impostazioni generali Django
DJANGO_SECRET_KEY=django-insecure-change-this-in-production
DJANGO_DEBUG=0
# Directory per i file di log (percorso assoluto o relativo)
DJANGO_LOGS_DIR=/path/to/your/logs

# Hosts e origins
# Liste separate da virgola, usate quando DEBUG=False
DJANGO_ALLOWED_HOSTS=example.com,api.example.com
DJANGO_CSRF_TRUSTED_ORIGINS=example.com,api.example.com

# Impostazioni Database (produzione)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=deploy_django
DB_USER=postgres
DB_PASSWORD=your-password-here
DB_HOST=localhost
DB_PORT=5432
DB_CONN_MAX_AGE=600

# Impostazioni Email
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=user@example.com
EMAIL_HOST_PASSWORD=your-password
EMAIL_USE_TLS=1
DEFAULT_FROM_EMAIL=no-reply@example.com

# Impostazioni Cache (opzionali)
# REDIS_URL=redis://localhost:6379/1

# Credenziali servizi terze parti (esempi)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
