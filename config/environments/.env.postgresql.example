# Database PostgreSQL per sviluppo
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=gestione_pareri_dev
# DB_USER=postgres
# DB_PASSWORD=your-password
# DB_HOST=localhost
# DB_PORT=5432
# DB_CONN_MAX_AGE=600

# Installazione PostgreSQL:
# 1. Docker: docker run --name postgres-dev -e POSTGRES_PASSWORD=mypassword -d -p 5432:5432 postgres
