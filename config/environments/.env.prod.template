# Template per variabili d'ambiente IIS Production
# Copia questo file in .env.prod e modifica i valori

# DATABASE CONFIGURATION
DJANGO_DATABASE_URL=postgresql://gestione_pareri_user:YOUR_STRONG_PASSWORD@localhost:5432/gestione_pareri_prod

# SECURITY SETTINGS
DJANGO_SECRET_KEY=your-very-long-secret-key-here-change-this-in-production
DJANGO_DEBUG=False
DJANGO_ENVIRONMENT=PROD

# HOST CONFIGURATION (modifica con i tuoi valori)
DJANGO_ALLOWED_HOSTS=192.168.1.100,your-domain.com,localhost
DJANGO_CSRF_TRUSTED_ORIGINS=http://192.168.1.100,https://your-domain.com,http://localhost:8000

# IIS SUBPATH CONFIGURATION
DJANGO_FORCE_SCRIPT_NAME=/pratiche-pareri

# SSL CONFIGURATION
DJANGO_SECURE_SSL_REDIRECT=False
DJANGO_TEST_DB=False

# EMAIL CONFIGURATION (opzionale - configura se necessario)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourcompany.com

# LOGGING
DJANGO_LOG_LEVEL=INFO

# REDIS (se configurato)
REDIS_URL=redis://127.0.0.1:6379/1
